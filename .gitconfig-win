[include]
    path = ~/.git.d/aliases.ini
    path = ~/.git.d/colors.ini
    path = ~/.git.d/core.ini
    path = ~/.git.d/pager.ini
    path = ~/.git.d/diff.ini
    path = ~/.git.d/lfs.ini
    path = ~/.git.d/misc.ini
    path = ~/.git.d/operations.ini
    path = ~/.git.d/url.ini
    path = ~/.git.d/user.ini

[core]
    autocrlf = true
    safecrlf = false
    editor = GitExtensions fileeditor

[difftool "winmerge"]
    path = WinMergeU
    cmd  = WinMergeU -e -u "$LOCAL" "$REMOTE"

[mergetool "winmerge"]
    path = WinMergeU
    cmd  = WinMergeU -e -u  -wl -wr -fm -dl "Mine: $LOCAL" -dm "Merged: $BASE" -dr "Theirs: $REMOTE" "$LOCAL" "$BASE" "$REMOTE" -o "$MERGED"

[difftool "kdiff3"]
    path = kdiff3
    cmd  = kdiff3 "$LOCAL" "$REMOTE"

[mergetool "kdiff3"]
    path = kdiff3
    cmd  = kdiff3 "$BASE" "$LOCAL" "$REMOTE" -o "$MERGED"

[difftool "vscode"]
    path = code
    cmd  = code --wait --diff "$LOCAL" "$REMOTE"

[mergetool "vscode"]
    path = code
    cmd  = code --wait "$MERGED"

[difftool "meld"]
    path = meld
    cmd  = meld "$LOCAL" "$REMOTE"

[mergetool "meld"]
    path = meld
    cmd  = meld "$LOCAL" "$BASE" "$REMOTE" --output "$MERGED"

[mergetool "smartsynchronize"]
    path = smartsynchronize
    cmd  = smartsynchronize "$LOCAL" "$REMOTE" "$MERGED"
    trustExitCode = false
